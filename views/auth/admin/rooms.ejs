<% title = "Manage Rooms" %>

<section class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-gradient">üè† Manage Rooms</h2>
    <button
      class="btn btn-primary rounded-pill shadow-sm"
      data-bs-toggle="modal"
      data-bs-target="#addRoomModal"
    >
      <i class="bi bi-plus-lg me-1"></i> Add Room
    </button>
  </div>

  <div class="card shadow-sm border-0 rounded-3">
    <div class="card-body">
      <% if (rooms.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Hostel</th>
              <th>Room No</th>
              <th>Capacity</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% rooms.forEach((room, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= room.hostelName %></td>
              <td><%= room.roomNumber %></td>
              <td><%= room.capacity %></td>
              <td>
                <span
                  class="badge bg-<%= room.isOccupied ? 'danger' : 'success' %>"
                >
                  <%= room.isOccupied ? 'Occupied' : 'Vacant' %>
                </span>
              </td>
              <td>
                <form
                  action="/admin/rooms/<%= room._id %>/toggle"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    class="btn btn-sm btn-outline-primary rounded-pill"
                    type="submit"
                  >
                    <i class="bi bi-arrow-repeat me-1"></i> Toggle
                  </button>
                </form>
                <form
                  action="/admin/rooms/<%= room._id %>/delete"
                  method="POST"
                  class="d-inline ms-1"
                  onsubmit="return confirm('Are you sure you want to delete this room?');"
                >
                  <button class="btn btn-sm btn-outline-danger rounded-pill">
                    <i class="bi bi-trash3 me-1"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-info-circle fs-3 d-block mb-2"></i>
        No rooms available yet. Add one above.
      </div>
      <% } %>
    </div>
  </div>
</section>

<!-- ADD ROOM MODAL -->
<div
  class="modal fade"
  id="addRoomModal"
  tabindex="-1"
  aria-labelledby="addRoomModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-semibold" id="addRoomModalLabel">
          <i class="bi bi-door-open me-2"></i> Add New Room
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form method="POST" action="/admin/rooms/add">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label fw-semibold">Hostel Name</label>
            <input
              type="text"
              name="hostelName"
              class="form-control"
              placeholder="Enter hostel name"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Room Number</label>
            <input
              type="text"
              name="roomNumber"
              class="form-control"
              placeholder="Enter room number"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Capacity</label>
            <input
              type="number"
              name="capacity"
              class="form-control"
              min="1"
              placeholder="e.g., 3"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-outline-secondary rounded-pill"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary rounded-pill px-4">
            Add Room
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .text-gradient {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .btn-outline-primary:hover {
    background: #007bff;
    color: #fff;
  }
  .btn-outline-danger:hover {
    background: #dc3545;
    color: #fff;
  }
  .modal-content {
    border-radius: 20px;
  }
</style>
