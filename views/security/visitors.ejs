<% title = "Security Visitor Management" %>

<section class="visitor-section container py-5">
  <!-- HEADER -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5">
    <div>
      <h2 class="fw-bold gradient-text mb-1">ðŸ‘® Security Visitor Management</h2>
      <p class="text-muted mb-0">Monitor, approve, and track all visitors in real-time</p>
    </div>
    <div class="date-pill mt-3 mt-md-0 shadow-sm">
      <i class="bi bi-calendar3 me-2"></i> <%= new Date().toLocaleDateString() %>
    </div>
  </div>

  <!-- ADD VISITOR CARD -->
  <div class="card shadow-glass border-0 rounded-4 mb-5 overflow-hidden">
    <div class="card-header bg-gradient-primary text-white py-3 px-4 d-flex justify-content-between align-items-center">
      <h5 class="mb-0 fw-semibold"><i class="bi bi-person-plus-fill me-2"></i>Log New Visitor</h5>
      <i class="bi bi-door-open-fill fs-4"></i>
    </div>
    <div class="card-body bg-white bg-opacity-75 p-4">
      <form action="/security/visitors/add" method="POST" class="row g-3 align-items-center">
        <div class="col-md-3">
          <label class="form-label fw-semibold small text-muted">Visitor Name</label>
          <input type="text" name="name" class="form-control form-control-lg rounded-3" placeholder="e.g. Rakesh Kumar" required />
        </div>

        <div class="col-md-2">
          <label class="form-label fw-semibold small text-muted">Contact</label>
          <input type="text" name="contact" class="form-control form-control-lg rounded-3" placeholder="9876543210" />
        </div>

        <div class="col-md-3">
          <label class="form-label fw-semibold small text-muted">Visiting Student</label>
          <select name="studentId" class="form-select form-select-lg rounded-3" required>
            <option value="">Select Student</option>
            <% students.forEach(s => { %>
              <option value="<%= s._id %>"><%= s.roll %> â€” <%= s.hostelName %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-semibold small text-muted">Purpose</label>
          <input type="text" name="purpose" class="form-control form-control-lg rounded-3" placeholder="Delivery / Meeting / Parent" required />
        </div>

        <div class="col-md-1 d-grid">
          <button type="submit" class="btn btn-lg btn-primary rounded-3 fw-semibold shadow-hover">
            <i class="bi bi-plus-circle me-1"></i> Add
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- VISITOR TABLE -->
  <div class="card shadow-glass border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-gradient-success text-white py-3 px-4 d-flex justify-content-between align-items-center">
      <h5 class="mb-0 fw-semibold"><i class="bi bi-clipboard-check me-2"></i>Active Visitor Logs</h5>
      <span class="badge bg-light text-success fw-semibold px-3 py-2">Live</span>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light text-secondary fw-semibold">
            <tr>
              <th class="py-3 ps-4">Visitor</th>
              <th>Student</th>
              <th>Purpose</th>
              <th>Status</th>
              <th>In Time</th>
              <th>Out Time</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (visitors.length > 0) { %>
              <% visitors.forEach(v => { %>
                <tr class="table-row">
                  <td class="ps-4">
                    <div class="d-flex align-items-center">
                      <div class="avatar-circle bg-gradient-primary text-white me-3">
                        <i class="bi bi-person"></i>
                      </div>
                      <div>
                        <div class="fw-semibold"><%= v.name %></div>
                        <small class="text-muted"><%= v.contact || 'N/A' %></small>
                      </div>
                    </div>
                  </td>
                  <td><%= v.student?.roll || "N/A" %></td>
                  <td><%= v.purpose %></td>
                  <td>
                    <span class="badge rounded-pill px-3 py-2
                      <%= v.status === 'Approved' ? 'bg-success' :
                          v.status === 'Checked-Out' ? 'bg-secondary' :
                          'bg-warning text-dark' %>">
                      <%= v.status %>
                    </span>
                  </td>
                  <td><%= new Date(v.inTime).toLocaleTimeString() %></td>
                  <td><%= v.outTime ? new Date(v.outTime).toLocaleTimeString() : '-' %></td>
                  <td class="text-center">
                    <% if (v.status === "Pending") { %>
                      <form action="/security/visitors/<%= v._id %>/approve" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-success rounded-pill shadow-sm px-3">
                          <i class="bi bi-check2-circle me-1"></i>Approve
                        </button>
                      </form>
                    <% } else if (v.status === "Approved") { %>
                      <form action="/security/visitors/<%= v._id %>/checkout" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger rounded-pill shadow-sm px-3">
                          <i class="bi bi-box-arrow-right me-1"></i>Check-Out
                        </button>
                      </form>
                    <% } else { %>
                      <span class="text-muted small fst-italic">Completed</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center py-4 text-muted">
                  <i class="bi bi-person-dash fs-2 d-block mb-2"></i>
                  No visitor entries yet
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<!-- STYLES -->
<style>
  body {
    background: radial-gradient(circle at top left, #eef3ff, #f8faff 70%);
    font-family: "Poppins", sans-serif;
  }

  .gradient-text {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .date-pill {
    background: rgba(255, 255, 255, 0.8);
    padding: 8px 16px;
    border-radius: 25px;
    font-weight: 500;
  }

  .card {
    border-radius: 20px;
    overflow: hidden;
  }

  .shadow-glass {
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(12px);
  }

  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #6610f2);
  }

  .bg-gradient-success {
    background: linear-gradient(135deg, #28a745, #20c997);
  }

  .avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #007bff, #6610f2);
    font-size: 18px;
  }

  .table thead th {
    background: #f9f9fb;
    border-bottom: 2px solid #e9ecef;
  }

  .table-row:hover {
    background-color: rgba(0, 123, 255, 0.05);
    transition: 0.3s;
  }

  .btn {
    transition: all 0.2s ease-in-out;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .visitor-section {
      padding: 1.5rem;
    }
    .form-control-lg,
    .form-select-lg {
      font-size: 0.9rem;
    }
  }
</style>
