<% title = "Room Bookings" %>

<section class="container-fluid py-5 px-md-4">
  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <div>
      <h2 class="fw-bold text-gradient mb-1">
        üè† Room Bookings
      </h2>
      <p class="text-muted mb-0">
        Review your current room booking details and their status below.
      </p>
    </div>
    <a href="/rooms" class="btn btn-outline-primary btn-sm rounded-pill mt-3 mt-md-0">
      <i class="bi bi-door-open me-1"></i> Browse Rooms
    </a>
  </div>

  <!-- Table Card -->
  <div class="card shadow-sm border-0 glass-effect">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Student</th>
              <th>Room</th>
              <th>Hostel</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% if (bookings && bookings.length > 0) { %>
              <% bookings.forEach(function(b, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= b.studentName %></td>
                  <td><%= b.roomNumber %></td>
                  <td><%= b.hostelName %></td>
                  <td>
                    <span class="badge status-badge <%= b.status %>">
                      <%= b.status.charAt(0).toUpperCase() + b.status.slice(1) %>
                    </span>
                  </td>
                  <td><%= new Date(b.createdAt).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">
                  <i class="bi bi-info-circle me-2"></i> No bookings found.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<!-- Styles -->
<style>
  .text-gradient {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .glass-effect {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 15px;
  }

  .status-badge {
    font-size: 0.85rem;
    font-weight: 600;
    padding: 6px 10px;
    border-radius: 20px;
    text-transform: capitalize;
  }

  .status-badge.confirmed {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: #fff;
  }

  .status-badge.pending {
    background: linear-gradient(135deg, #ffc107, #ff8c00);
    color: #212529;
  }

  .status-badge.cancelled {
    background: linear-gradient(135deg, #6c757d, #adb5bd);
    color: #fff;
  }

  .table thead {
    background-color: #f8f9fa;
    font-weight: 600;
  }

  .table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
    transition: 0.3s ease;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 1.4rem;
    }
  }
</style>
