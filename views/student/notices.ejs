<% title = "Hostel Notices" %>

<section class="container py-5 animate__animated animate__fadeIn">
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
    <div>
      <h2 class="fw-bold text-gradient mb-1">ðŸ“¢ Hostel Notices</h2>
      <p class="text-muted small mb-0">Stay updated with the latest hostel announcements and circulars.</p>
    </div>
    <div class="mt-3 mt-md-0">
      <button class="btn btn-gradient rounded-pill shadow-sm" onclick="location.reload()">
        <i class="bi bi-arrow-clockwise me-1"></i> Refresh
      </button>
    </div>
  </div>

  <% if (notices.length === 0) { %>
  <div class="empty-state text-center py-5 glass-card shadow-sm">
    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076549.png" width="130" class="mb-3" alt="No Notices" />
    <h5 class="fw-semibold mb-2 text-muted">No Notices Yet</h5>
    <p class="text-secondary small">All updates will appear here once the warden posts them.</p>
  </div>
  <% } else { %>
  <div class="row g-4">
    <% notices.forEach(n => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card notice-card shadow-sm glass-card border-0 p-3 h-100">
        <div class="d-flex justify-content-between align-items-start mb-2">
          <h5 class="fw-semibold text-gradient"><i class="bi bi-megaphone me-2"></i><%= n.title %></h5>
          <span class="badge bg-gradient-info text-white">
            <%= new Date(n.createdAt).toLocaleDateString() %>
          </span>
        </div>
        <p class="text-muted small"><%= n.content.substring(0, 150) %>...</p>
        <% if (n.attachment) { %>
          <a href="<%= n.attachment %>" target="_blank" class="btn btn-outline-primary btn-sm rounded-pill mt-2">
            <i class="bi bi-paperclip me-1"></i> View Attachment
          </a>
        <% } %>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</section>

<!-- ðŸŽ¨ Styles -->
<style>
body {
  background: linear-gradient(135deg, #f7faff, #eef3f8);
  font-family: "Poppins", sans-serif;
}
.text-gradient {
  background: linear-gradient(90deg, #007bff, #6610f2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.btn-gradient {
  background: linear-gradient(90deg, #007bff, #00bfff);
  color: white;
  border: none;
  transition: 0.3s ease;
}
.btn-gradient:hover {
  background: linear-gradient(90deg, #0069d9, #0099cc);
  transform: translateY(-2px);
}
.glass-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  border-radius: 18px;
  transition: all 0.3s ease;
}
.glass-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
}
.notice-card {
  animation: fadeInUp 0.6s ease;
}
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.badge.bg-gradient-info {
  background: linear-gradient(90deg, #17a2b8, #00c3ff);
}
.empty-state img {
  opacity: 0.9;
  animation: float 3s ease-in-out infinite;
}
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}
</style>
