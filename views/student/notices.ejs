<% title = "Hostel Notices" %>

<section class="container py-5 animate__animated animate__fadeIn">
  <!-- üî• Floating Header -->
  <div class="floating-header mb-5 shadow-sm">
    <h2 class="fw-bold text-gradient m-0">üì¢ Hostel Notices</h2>
    <p class="text-muted small m-0">
      All important hostel announcements appear here.
    </p>
  </div>

  <!-- üîç Search + Actions -->
  <div
    class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2"
  >
    <!-- Search -->
    <div class="search-bar shadow-sm">
      <i class="bi bi-search"></i>
      <input id="searchNotice" placeholder="Search notices..." />
    </div>

    <!-- Buttons -->
    <div class="d-flex gap-2">
      <button
        class="btn btn-gradient shadow-sm rounded-pill px-3"
        onclick="location.reload()"
      >
        <i class="bi bi-arrow-repeat me-1"></i> Refresh
      </button>

      <button
        class="btn btn-success shadow-sm rounded-pill px-3"
        data-bs-toggle="modal"
        data-bs-target="#leaveModal"
      >
        <i class="bi bi-plus-circle me-1"></i> Add Leave
      </button>
    </div>
  </div>

  <!-- If No Notices -->
  <% if (!notices.length) { %>
  <div class="empty-area glass-card p-5 text-center">
    <img
      src="https://cdn-icons-png.flaticon.com/512/4076/4076549.png"
      class="floating-img"
      width="130"
    />
    <h5 class="fw-bold mt-3">No Notices Available</h5>
    <p class="text-muted small">You will see new announcements here soon.</p>
  </div>
  <% } else { %>

  <!-- üíé Notice Grid -->
  <div class="row g-4" id="noticeContainer">
    <% notices.forEach(n => { %>
    <div
      class="col-md-6 col-lg-4 notice-item"
      data-title="<%= n.title.toLowerCase() %>"
    >
      <div class="notice-card glass-card p-4 shadow-lg h-100">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <h5 class="fw-bold mb-0 notice-title">
            <i class="bi bi-megaphone-fill me-2"></i> <%= n.title %>
          </h5>
          <span class="date-chip"
            ><%= new Date(n.createdAt).toLocaleDateString() %></span
          >
        </div>

        <% if (n.category) { %>
        <span class="category-chip <%= n.category.toLowerCase() %>">
          <i class="bi bi-tag"></i> <%= n.category %>
        </span>
        <% } %>

        <p class="text-muted small mt-3">
          <%= n.content?.substring(0, 180) %>...
        </p>

        <% if (n.attachment) { %>
        <a
          href="<%= n.attachment %>"
          target="_blank"
          class="btn btn-outline-primary btn-sm rounded-pill px-3 mt-2"
        >
          <i class="bi bi-file-earmark-text me-1"></i> View Document
        </a>
        <% } %>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</section>

<!-- üåø Leave Modal -->
<div class="modal fade" id="leaveModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content modal-glass p-3">
      <div class="modal-header border-0">
        <h5 class="fw-bold text-gradient">üìù Apply for Leave</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <form action="/student/leaves" method="POST">
        <div class="modal-body">
          <label class="form-label fw-semibold">Reason</label>
          <textarea
            class="form-control modern-input"
            name="reason"
            required
          ></textarea>

          <label class="form-label fw-semibold mt-3">Start Date</label>
          <input
            type="date"
            class="form-control modern-input"
            name="startDate"
            required
          />

          <label class="form-label fw-semibold mt-3">End Date</label>
          <input
            type="date"
            class="form-control modern-input"
            name="endDate"
            required
          />
        </div>

        <div class="modal-footer border-0">
          <button class="btn btn-secondary rounded-pill">Cancel</button>
          <button class="btn btn-success rounded-pill px-4">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #eef3ff, #ffffff);
    font-family: "Poppins";
  }

  /* ---------------- HEADER ---------------- */
  .floating-header {
    padding: 20px 25px;
    border-radius: 16px;
    background: white;
    border-left: 5px solid #007bff;
    backdrop-filter: blur(10px);
  }

  /* ---------------- SEARCH ---------------- */
  .search-bar {
    background: white;
    border-radius: 40px;
    padding: 8px 15px;
    display: flex;
    align-items: center;
    border: 1px solid #e0e0e0;
  }
  .search-bar i {
    color: #777;
    margin-right: 8px;
  }
  .search-bar input {
    border: none;
    outline: none;
    width: 180px;
    font-size: 14px;
  }
  .search-bar input:focus {
    width: 240px;
    transition: 0.3s;
  }

  /* ---------------- CARDS ---------------- */
  .glass-card {
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(14px);
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    transition: 0.3s ease;
  }
  .glass-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  .notice-title {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .date-chip {
    font-size: 12px;
    padding: 6px 10px;
    background: #00bfff;
    color: white;
    border-radius: 8px;
  }

  .category-chip {
    padding: 6px 12px;
    font-size: 12px;
    border-radius: 30px;
    color: white;
  }
  .important {
    background: #ff4d4d;
  }
  .event {
    background: #28a745;
  }
  .general {
    background: #007bff;
  }

  /* ---------------- MODAL ---------------- */
  .modal-glass {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    backdrop-filter: blur(18px);
  }
  .modern-input {
    border-radius: 14px !important;
    padding: 10px 15px;
  }

  .floating-img {
    animation: float 3s ease-in-out infinite;
  }
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>

<script>
  // Search Script
  document
    .getElementById("searchNotice")
    ?.addEventListener("input", function () {
      const query = this.value.toLowerCase();
      document.querySelectorAll(".notice-item").forEach((item) => {
        item.style.display = item.getAttribute("data-title").includes(query)
          ? "block"
          : "none";
      });
    });
</script>
