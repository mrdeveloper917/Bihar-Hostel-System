<section class="container my-5">
  <h2 class="text-center text-primary mb-4">ðŸ’³ Hostel Fee Payment</h2>

  <div class="card shadow-lg p-4 text-center">
    <h5>Amount Due: â‚¹<%= feeAmount || process.env.FEE_AMOUNT || 5000 %></h5>
    <button id="payBtn" data-amount="<%= feeAmount || process.env.FEE_AMOUNT || 5000 %>" class="btn btn-success mt-3">Pay with Razorpay</button>

    <div class="mt-3">
      <% if (student && student.feeStatus === 'Paid') { %>
        <span class="badge bg-success">Paid</span>
