<% title = "Manage Leave Requests" %>

<section class="container py-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
    <div>
      <h2 class="fw-bold text-gradient mb-1">üóìÔ∏è Leave Management</h2>
      <p class="text-muted small mb-0">
        Review and manage student leave requests in one place.
      </p>
    </div>
    <div class="mt-3 mt-md-0">
      <button
        class="btn btn-gradient rounded-pill shadow-sm"
        onclick="location.reload()"
      >
        <i class="bi bi-arrow-clockwise me-1"></i> Refresh
      </button>
    </div>
  </div>

  <!-- Table Section -->
  <% if (leaves.length === 0) { %>
  <div class="empty-state text-center py-5 glass-card shadow-sm">
    <img
      src="https://cdn-icons-png.flaticon.com/512/4076/4076549.png"
      width="130"
      class="mb-3"
      alt="No Leaves"
    />
    <h5 class="fw-semibold mb-2 text-muted">No Leave Requests</h5>
    <p class="text-secondary small">
      All leave requests will appear here once submitted by students.
    </p>
  </div>
  <% } else { %>
  <div class="card glass-card border-0 shadow-sm">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Student</th>
            <th>Reason</th>
            <th>From</th>
            <th>To</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% leaves.forEach(l => { %>
          <tr>
            <td>
              <strong><%= l.student?.user?.name || "N/A" %></strong><br />
              <small class="text-muted"
                ><%= l.student?.user?.email || "N/A" %></small
              >
            </td>
            <td><%= l.reason %></td>
            <td><%= new Date(l.fromDate).toLocaleDateString() %></td>
            <td><%= new Date(l.toDate).toLocaleDateString() %></td>
            <td>
              <span
                class="badge px-3 py-2 rounded-pill <%= l.status === 'approved' ? 'bg-success' : l.status === 'rejected' ? 'bg-danger' : 'bg-warning text-dark' %>"
              >
                <%= l.status %>
              </span>
            </td>
            <td>
              <% if (l.status === 'pending') { %>
              <div class="btn-group">
                <form
                  action="/admin/leaves/approve/<%= l._id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-sm btn-success rounded-pill me-2"
                  >
                    <i class="bi bi-check-circle"></i> Approve
                  </button>
                </form>
                <form
                  action="/admin/leaves/reject/<%= l._id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-sm btn-danger rounded-pill"
                  >
                    <i class="bi bi-x-circle"></i> Reject
                  </button>
                </form>
              </div>
              <% } else { %>
              <span class="text-muted small">-</span>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } %>
</section>

<!-- üé® Styles -->
<style>
  body {
    background: linear-gradient(135deg, #f8fbff, #eef2f8);
    font-family: "Poppins", sans-serif;
  }

  .text-gradient {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .btn-gradient {
    background: linear-gradient(90deg, #007bff, #00bfff);
    color: white;
    border: none;
    transition: 0.3s ease;
  }
  .btn-gradient:hover {
    background: linear-gradient(90deg, #0069d9, #0099cc);
    transform: translateY(-2px);
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    border-radius: 18px;
    transition: all 0.3s ease;
  }
  .glass-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  .table {
    font-size: 0.95rem;
  }
  .badge {
    font-size: 0.85rem;
  }
  .empty-state img {
    opacity: 0.9;
    animation: float 3s ease-in-out infinite;
  }
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }
</style>
