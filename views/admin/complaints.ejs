  }
  .bg-gradient-primary {
    background: linear-gradient(135deg, #5b0fff, #4a00e0, #00a2ff) !important;
  }

  /* ---------- Glass Card ---------- */
  .glass-card {
    background: rgba(255, 255, 255, 0.92);
    border-radius: 22px;
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    transition: 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
  }

  /* ---------- Table Styling ---------- */
  table thead {
    background: linear-gradient(120deg, #f4f8ff, #e8f0ff);
    border-bottom: 2px solid #dce3f7;
  }

  table thead th {
    font-weight: 700;
    padding: 14px;
    color: #333;
  }

  table tbody tr {
    transition: 0.25s ease;
  }

  table tbody tr:hover {
    background: rgba(0, 123, 255, 0.06);
    transform: scale(1.01);
  }

  td {
    padding: 14px 12px !important;
  }

  /* ---------- Inputs ---------- */
  .form-control,
  .form-select {
    background: rgba(255, 255, 255, 0.85);
    border: 1px solid rgba(200, 200, 200, 0.4);
    border-radius: 25px;
    padding: 10px 18px;
    transition: 0.3s;
  }

  .form-control:focus,
  .form-select:focus {
    box-shadow: 0 0 0 4px rgba(98, 0, 234, 0.15);
    border-color: #6a11cb;
  }

  /* ---------- Buttons ---------- */
  .btn-gradient {
    background: linear-gradient(135deg, #20c997, #00e676, #1de9b6);
    border: none;
    color: white;
    font-weight: 600;
    padding: 6px 18px;
    border-radius: 25px;
    transition: 0.3s;
  }

  .btn-gradient:hover {
    transform: translateY(-3px);
    background: linear-gradient(135deg, #1de9b6, #20c997, #00e676);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
  }

  /* ---------- Status Pills ---------- */
  .status-pill {
    display: inline-flex;
    align-items: center;
    padding: 0.45rem 0.9rem;
    border-radius: 25px;
    font-weight: 600;
    color: white;
    font-size: 0.82rem;
    text-transform: capitalize;
    transition: 0.3s ease;
  }

  .bg-success {
    background: linear-gradient(135deg, #00c853, #00e676) !important;
  }

  .bg-warning {
    background: linear-gradient(135deg, #ffb300, #ff6f00) !important;
    color: black !important;
  }

  /* Success animation */
  .resolved-row {
    animation: fadeSuccess 1s ease forwards;
  }

  @keyframes fadeSuccess {
    0% {
      background-color: #eaffea;
    }
    100% {
      background-color: transparent;
    }
  }

  @media (max-width: 768px) {
    .summary-card {
      text-align: center;
    }
    .form-control,
    .form-select {
      width: 100%;
    }
  }
</style>
