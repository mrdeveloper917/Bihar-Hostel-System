<% title = "Manage Complaints" %>

<section class="container my-5">
  <!-- Header -->
  <div
    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4"
  >
    <div>
      <h2 class="fw-bold text-gradient mb-1">üõ†Ô∏è Complaints Management</h2>
      <p class="text-muted mb-0">
        Monitor and resolve all student complaints efficiently.
      </p>
    </div>

    <div class="d-flex gap-2 mt-3 mt-md-0 flex-wrap">
      <input
        type="text"
        id="searchComplaint"
        class="form-control rounded-pill shadow-sm px-4"
        placeholder="üîç Search by student or subject..."
        style="max-width: 300px"
      />
      <select
        id="statusFilter"
        class="form-select rounded-pill shadow-sm px-3"
        style="max-width: 200px"
      >
        <option value="all">All</option>
        <option value="open">Open</option>
        <option value="resolved">Resolved</option>
      </select>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="summary-card bg-gradient-warning text-dark">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="mb-1 fw-semibold">Open Complaints</h6>
            <h3 class="fw-bold">
              <%= complaints.filter(c => c.status === 'open').length %>
            </h3>
          </div>
          <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="summary-card bg-gradient-success text-white">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="mb-1 fw-semibold">Resolved</h6>
            <h3 class="fw-bold">
              <%= complaints.filter(c => c.status === 'resolved').length %>
            </h3>
          </div>
          <i class="bi bi-check2-circle fs-2"></i>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="summary-card bg-gradient-primary text-white">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h6 class="mb-1 fw-semibold">Total Complaints</h6>
            <h3 class="fw-bold"><%= complaints.length %></h3>
          </div>
          <i class="bi bi-chat-left-text fs-2"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Complaints Table -->
  <div class="card border-0 shadow-sm rounded-4 glass-card">
    <div class="card-body">
      <% if (complaints && complaints.length > 0) { %>
      <div class="table-responsive">
        <table class="table align-middle table-hover" id="complaintsTable">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Student</th>
              <th>Subject</th>
              <th>Description</th>
              <th>Status</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% complaints.forEach((c, i) => { %>
            <tr data-status="<%= c.status %>">
              <td class="fw-semibold text-muted"><%= i + 1 %></td>
              <td>
                <i class="bi bi-person-circle text-primary me-1"></i><%=
                c.student?.name || "Unknown" %>
              </td>
              <td><%= c.subject %></td>
              <td class="text-muted small">
                <%= c.description.substring(0, 60) %>...
              </td>
              <td>
                <span
                  class="status-pill bg-<%= c.status === 'resolved' ? 'success' : 'warning' %>"
                >
                  <i
                    class="bi <%= c.status === 'resolved' ? 'bi-check-circle' : 'bi-exclamation-circle' %> me-1"
                  ></i>
                  <%= c.status.charAt(0).toUpperCase() + c.status.slice(1) %>
                </span>
              </td>
              <td><%= new Date(c.createdAt).toLocaleDateString() %></td>
              <td>
                <% if (c.status === 'open') { %>
                <button
                  class="btn btn-sm btn-gradient resolve-btn"
                  data-id="<%= c._id %>"
                >
                  <i class="bi bi-check2-circle me-1"></i> Resolve
                </button>
                <% } else { %>
                <span class="text-success fw-semibold"
                  ><i class="bi bi-patch-check-fill me-1"></i>Done</span
                >
                <% } %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
        No complaints found.
      </div>
      <% } %>
    </div>
  </div>
</section>

<!-- ====== Scripts ====== -->
<script>
  // Filter Functionality
  const searchInput = document.getElementById("searchComplaint");
  const filterSelect = document.getElementById("statusFilter");
  const rows = document.querySelectorAll("#complaintsTable tbody tr");

  function filterComplaints() {
    const keyword = searchInput.value.toLowerCase();
    const status = filterSelect.value;

    rows.forEach((row) => {
      const student = row.children[1].innerText.toLowerCase();
      const subject = row.children[2].innerText.toLowerCase();
      const matchSearch =
        student.includes(keyword) || subject.includes(keyword);
      const matchStatus = status === "all" || row.dataset.status === status;

      row.style.display = matchSearch && matchStatus ? "" : "none";
    });
  }

  searchInput.addEventListener("input", filterComplaints);
  filterSelect.addEventListener("change", filterComplaints);

  // AJAX Resolve Complaint with animation
  document.querySelectorAll(".resolve-btn").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const id = btn.dataset.id;
      btn.disabled = true;
      btn.innerHTML =
        "<i class='spinner-border spinner-border-sm'></i> Resolving...";

      try {
        const res = await fetch(`/admin/complaints/${id}/resolve`, {
          method: "POST",
        });
        if (res.ok) {
          const row = btn.closest("tr");
          const badge = row.querySelector(".status-pill");
          badge.classList.replace("bg-warning", "bg-success");
          badge.innerHTML = "<i class='bi bi-check-circle me-1'></i>Resolved";
          row.classList.add("resolved-row");
          btn.replaceWith(
            `<span class='text-success fw-semibold'><i class="bi bi-patch-check-fill me-1"></i> Done</span>`
          );
        } else {
          alert("Failed to resolve complaint.");
        }
      } catch (err) {
        console.error(err);
        alert("Error resolving complaint.");
      }
    });
  });
</script>

<!-- ====== Premium UI/UX Styles ====== -->
<style>
